@using Nop.Core.Domain.Catalog
@model (Product product, string financingPageUrl, string promoType);

<div class="ca-promo">
    <div data-widget-type="@Model.promoType"
         data-widget-item-sku="@Model.product.Sku"
         data-widget-item-price="@Model.product.Price"
         data-widget-financing-page-url="@Model.financingPageUrl">
    </div>

    <script asp-location="Footer">
        $(document).ready(function () {
            var ca_promo = $('.ca-promo');

            if (ca_promo.length > 0) {
                ca_promo.each(function () {
                    $(this).prependTo($(this).parent());
                    $(this).find('div').addClass('ca-promotional-widget');
                });
            }
        });
    </script>
</div>